(defun convert-list-to-tuple-pairs (list)
  (append
   (list (list (car list) (cadr list)))
   (if (cddr list) (convert-list-to-tuple-pairs (cddr list)))))

(defun mapcar-every-other-keep-all (your-function list)
  (append
   (list (funcall your-function (car list)) (cadr list))
   (if (cddr list) (mapcar-every-other-keep-all your-function (cddr list)))))

;; needs to be tested
(defun mapcar-every-other (your-function list)
  (append
   (list (funcall your-function (cadr list)))
   (if (cddr list) (mapcar-every-other your-function (cddr list)))))

;; it definitely works
(defmacro define-keys-for-map (map &rest things)
  (append
   (list (quote progn))
   (mapcar
    (lambda (x) (list (quote define-key) map (car x) (cadr x)))
    (convert-list-to-tuple-pairs things))))

;; better? It doesn't work at the moment...
(defmacro define-keys-for-map (map &rest things)
  (append
   (list (quote progn))
   (mapcar (lambda (x) (append (list (quote define-key) map) x))
           (loop for x in things by #'cddr
              for y in (cdr things)
              collect (list (list (quote kbd) x) y)))))

;; Works fantastically!
(defmacro define-implied-keys-for-map (map &rest things)
  (append
   (list (quote progn))
   (loop for x in things by #'cddr
      for y in (cdr things) by #'cddr
      collect (list (quote define-key) map (list (quote kbd) x) y))))

;; nope
(defmacro define-keys-for-map-implicit-kbd (map &rest things)
  (append
   (list (quote progn))
   (mapcar
    (lambda (x) (list (quote define-key) map (kbd (car x)) (cadr x)))
    (convert-list-to-tuple-pairs things))))

;; nope
(defmacro define-keys-for-map-implicit-kbd (map &rest things)
  (append
   (list (quote define-keys-for-map) map)
   (mapcar
    (lambda (x) (list (list (quote kbd) (car x)) (cadr x)))
    (convert-list-to-tuple-pairs things))))

;; nope
(defmacro define-keys-for-map-implicit-kbd (map &rest things)
  `(define-keys-for-map
       ,@(mapcar
         (lambda (x) (list (list (quote kbd) (car x)) (cadr x)))
         (convert-list-to-tuple-pairs things))))

;; maybe?
